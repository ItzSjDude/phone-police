<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <SwitchPreferenceCompat
        android:defaultValue="false"
        android:key="full_battery_alert_switch"
        android:summary="Toggle this switch to enable or disable the full battery alert"
        android:title="Enable Full Battery Alert" />

    <ListPreference
        android:key="full_battery_alert_tone_picker"
        android:title="Full Battery Alert Tone"
        android:entries="@array/alarm_tone_names"
        android:entryValues="@array/alarm_tone_values"
        android:defaultValue="tone1"
        android:dialogTitle="Select Alarm Tone"
        android:summary="%s"/>
</PreferenceScreen>
